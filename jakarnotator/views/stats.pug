extends layout

block head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  script(src='/scripts/vue-bootstrap-table.js')


block content
  .container-fluid
    h1 Nombre de masques par image
    #app
      .row
        .col-sm-12
          button.btn.btn-default(@click='toggleFilter') Toggle Filter
          button.btn.btn-default(@click='togglePicker') Toggle Column Picker
          button.btn.btn-default(@click='togglePagination') Toggle Pagination
        br
        br
        vue-bootstrap-table(:columns='columns', :values='values', :show-filter='showFilter', :show-column-picker='showPicker', :paginated='paginated', :multi-column-sortable='multiColumnSortable')

  .container-fluid
    h1 Nombre de masques par cat√©gorie
    #app_mask
      .row
        .col-sm-12
          button.btn.btn-default(@click='toggleFilter') Toggle Filter
          button.btn.btn-default(@click='togglePicker') Toggle Column Picker
          button.btn.btn-default(@click='togglePagination') Toggle Pagination
        br
        br
        vue-bootstrap-table(:columns='columns', :values='values', :show-filter='showFilter', :show-column-picker='showPicker', :paginated='paginated', :multi-column-sortable='multiColumnSortable')

  script(src='/javascripts/get_stats.js')